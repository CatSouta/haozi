<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
  <meta name="description" content="<%= config.description || theme.description %>">
  <meta name="keyword" content="<%= config.keyword || theme.keyword %>">
  <% if (config.favicon || theme.favicon){ %>
    <link rel="shortcut icon" type="image/ico" href="<%= config.favicon || theme.favicon %>"/>
  <% } else { %>
    <%- favicon_tag('css/images/logo_christmas.png') %>
  <% } %>
  <title>
    <% if (page.title){ %>
      <%= page.title %> | <%= config.title %>
    <% } else { %>
      <%= config.title %>
    <% } %>
  </title>


  <link rel="alternate" type="application/rss+xml" title="简隐月子喵 -> haozi » Feed" href="https://haozi.moe/atom.xml">
  <% if (page.excerpt){ %>
    <%- partial('meta/seo', {description: page.excerpt.match(/<p\s*.*>(\s*.*)<\/p>/g).map(v => v.replace(/<.+?>/g, '')).join('\n')}) %>
    <%- partial('meta/opengraph', {title: page.title, description: page.excerpt.match(/<p\s*.*>(\s*.*)<\/p>/g).map(v => v.replace(/<.+?>/g, '')).join('\n')}) %>
  <% } %>
  <script src="//cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
  <script src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
  <%- css(['css/style']) %>
    <%- js(['js/tracker']) %>
  <%- partial('_third-party/mathjax') %>
