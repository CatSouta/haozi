<script>
    (function () {
        var gitmentConfig = "<%= theme['gitment_owner'] %>";
        if (gitmentConfig !== 'undefined') {
            const gitalk = new Gitalk({
                clientID: "<%= theme['gitment_oauth_id'] %>",
