                repo: "<%= theme['gitment_repo'] %>",
                owner: "<%= theme['gitment_owner'] %>",
                admin: ['haozi23333'],
                labels: ['gitment'],
                id: "关于",      // Ensure uniqueness and length less than 50
                distractionFreeMode: false  // Facebook-like distraction free mode
            })
            gitalk.render('comments')
        }


        $(document).ready(() => {
            const ul = document.getElementById("friends");
            if (!ul) {
                return
            }
            const lis = Array.prototype.slice.call(ul.childNodes, 0);
            let i = lis.length;
            while(i-- > 0)ul.insertBefore(lis[i], lis[parseInt(Math.random() * lis.length)])
        })
    })();
</script>
