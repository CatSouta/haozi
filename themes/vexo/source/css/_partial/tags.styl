#tag-cloud
  margin: 30px 0
  text-align: center
  a
    border: none
    line-height: 28px
    margin: 0 4px
    margin-bottom: 8px
    background: base2
    display: inline-block
    border-radius: 4px
    padding: 0 10px
    color: base1
    transition: background .5s
    &:hover
      background: rgb(0, 133, 161)
  .tag0
    color: base2
    background: base0
  .tag1
    background: base2
  .tag2
    color: base2
    background: base0

.tag-list
  margin-left: 1em
  margin-right: 1em

.tag-name
  font-size: 1.4em
  position: relative
  &:before
    content: "#"
    color: yellow
    position: absolute;
    left: -.7em
    top: -2px
    font-size: 1.2em
    font-weight: 700

.tag-preview
  font-size: 1.1em
  padding-left: 1em
  li
    cursor: pointer
    margin: 10px 0
